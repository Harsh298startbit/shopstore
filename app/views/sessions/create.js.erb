<% if @success %>
  // Show success notification
  showNotification('<%= j @message %>', 'success');
  
  // Redirect to appropriate page after a short delay
  setTimeout(function() {
    window.location.href = '<%= current_user&.admin? ? admin_root_path : root_path %>';
  }, 1000);
<% else %>
  // Show error notification
  showNotification('<%= j @message %>', 'error');
<% end %>
